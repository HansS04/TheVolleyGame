CanvasExample2:

<CanvasExample3>
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0,1,0
                Rectangle:
                    size: self.size
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0,0,1
                Rectangle:
                    size: self.size


<CanvasExample>
    Button:
        pos: 100,400
        text: "A"
        on_press: root.on_button_a_click()



<MainWidget>:

    id: menu
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            canvas.before:
                Rectangle:
                    size: dp(800),dp(800)
                    pos: dp(-30), dp(150)
                    source: 'img/ball.png'
            Label:
                font_name: 'fonts/Bebasneue-Regular.ttf'
                font_size: 80
                pos: "400dp", "200dp"
                color: .1, .1, 1, 1
                text: 'The Volley Game'

        BoxLayout:
            BoxLayout:
                orientation: 'horizontal'
                padding: 30
                spacing: 3

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        size_hint: 1, 1
                        font_size: 30
                        text: root.playerName1
                        canvas.before:
                            Color:
                                rgba: .1, .1, 1, .1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    TextInput:
                        id: my_text_input
                        size_hint: 1, None
                        height: "50dp"
                        text: "Player 1"
                        multiline: False
                        on_text_validate: root.on_text_validate(self)
                    Button:
                        id: player_flag
                        background_normal: f'img/flags/{root.STATES[root.index]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .1, .2
                        on_press:
                            root.index = root.index + 1 if root.index < len(root.STATES) - 1 else 0
                            self.background_normal = f'img/flags/{root.STATES[root.index]}.png'






                BoxLayout:
                    size_hint: .3,1
                    width: 100
                    orientation: "vertical"
                    Label:
                        font_name: 'fonts/Bebasneue-Regular.ttf'
                        font_size: 50
                        text: "speed"
                    BoxLayout:
                        id: settings
                        size_hint: .8,2
                        orientation: "horizontal"
                        Slider:
                            height: 800
                            id: my_slider
                            min: 0
                            max: 100
                            value: 50
                            orientation: "vertical"
                        Label:
                            font_name: "fonts/Lcd.ttf"
                            font_size: 60
                            text: str(int(my_slider.value))

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        size_hint: 1, 1
                        font_size: 30
                        text: root.playerName2
                        canvas.before:
                            Color:
                                rgba: .1, .1, 1, .1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: my_text_input
                        size_hint: 1, None
                        height: "50dp"
                        text: "Player 2"
                        multiline: False
                        on_text_validate: root.on_text_validate2(self)
                    Button:
                        id: player2_flag
                        background_normal: f'img/flags/{root.STATES[root.index2]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .1, .2
                        on_press:
                            root.index = root.index2 + 1 if root.index2 < len(root.STATES) - 1 else 0
                            self.background_normal = f'img/flags/{root.STATES[root.index2]}.png'

