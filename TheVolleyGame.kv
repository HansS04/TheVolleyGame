<Ball>
    size: 16,16
    canvas:
        Ellipse:
            pos: self.pos
            size: self.ball_size,self.ball_size

<VolleyPlayer>
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: dp(120),dp(200)
            pos: self.pos
            source: 'img/player.png'
<VolleyPlayer2>
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: dp(120),dp(200)
            pos: self.pos
            source: 'img/player.png'

<Net>
    canvas.before:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            size: dp(20),dp(350)
            pos: self.pos



<Game>
    ball: volley_ball
    vp: player_left
    vp2: player_right
    net: net_volley


    on_enter:
        root.ids.player_left.speed = root.manager.screens[0].ids.my_slider.value
        root.ids.p_name.text = root.manager.screens[0].ids.my_text_input.text
        root.ids.p_name2.text = root.manager.screens[0].ids.my_text_input2.text
        root.start()
    Label:
        id: score
        font_name: "fonts/Lcd.ttf"s
        text: str(root.score1)
        pos: dp(-250), dp(300)
    Label:
        id: score2
        font_name: "fonts/Lcd.ttf"
        text: str(root.score2)
        pos: dp(-150), dp(300)
    Label:
        id: p_name

        pos: dp(-350), dp(300)
        size: dp(50), dp(50)
        text: "test"
    Label:
        id: p_name2
        pos: dp(350), dp(300)
        size: dp(50), dp(50)
        text: "test"


    Ball:
        id: volley_ball
        speed: 50

    VolleyPlayer:
        id: player_left
        name: 'Left'
        speed: 50
    VolleyPlayer2:
        id: player_right
        name: "right"
        speed: 50
    Net:
        id: net_volley


<MainWidget>:

    id: menu
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            canvas.before:
                Rectangle:
                    size: dp(800),dp(800)
                    pos: dp(-30), dp(150)
                    source: 'img/ball.png'
            Label:
                font_name: 'fonts/Bebasneue-Regular.ttf'
                font_size: 80
                pos: "400dp", "200dp"
                color: .1, .1, 1, 1
                text: 'The Volley Game'
        Button:
            pos_hint: {'x': .25, 'y': .2}
            size_hint: .5,.25
            text: "Start"
            on_press:
                root.manager.current = 'canvas'
        BoxLayout:
            BoxLayout:
                orientation: 'horizontal'
                padding: 30
                spacing: 3

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        size_hint: 1, 1
                        font_size: 30
                        text: root.playerName1
                        canvas.before:
                            Color:
                                rgba: .1, .1, 1, .1
                            Rectangle:
                                pos: self.pos
                                size: self.size

                    TextInput:
                        id: my_text_input
                        size_hint: 1, None
                        height: "50dp"
                        text: "Player 1"
                        multiline: False
                        on_text_validate: root.on_text_validate(self)
                    Button:
                        id: player_flag
                        background_normal: f'img/flags/{root.STATES[root.index]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .1, .2
                        on_press:
                            root.index = root.index + 1 if root.index < len(root.STATES) - 1 else 0
                            self.background_normal = f'img/flags/{root.STATES[root.index]}.png'

                BoxLayout:
                    size_hint: .3,1
                    width: 100
                    orientation: "vertical"
                    Label:
                        font_name: 'fonts/Bebasneue-Regular.ttf'
                        font_size: 50
                        text: "FPS"
                    BoxLayout:
                        id: settings
                        size_hint: .8,2
                        orientation: "horizontal"
                        Slider:
                            height: 800
                            id: my_slider
                            min: 2
                            max: 120
                            value: 50
                            orientation: "vertical"
                        Label:
                            font_name: "fonts/Lcd.ttf"
                            font_size: 60
                            text: str(int(my_slider.value))

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        size_hint: 1, 1
                        font_size: 30
                        text: root.playerName2
                        canvas.before:
                            Color:
                                rgba: .1, .1, 1, .1
                            Rectangle:
                                pos: self.pos
                                size: self.size
                    TextInput:
                        id: my_text_input2
                        size_hint: 1, None
                        height: "50dp"
                        text: "Player 2"
                        multiline: False
                        on_text_validate: root.on_text_validate2(self)
                    Button:
                        id: player_flag
                        background_normal: f'img/flags/{root.STATES[root.right_index]}.png'
                        pos_hint: {'x': 0, 'y': .2}
                        size_hint: .1, .2
                        on_press:
                            root.right_index = root.right_index + 1 if root.right_index < len(root.STATES) - 1 else 0
                            self.background_normal = f'img/flags/{root.STATES[root.right_index]}.png'

